{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üåê Debug TKA in VS Code",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": ".*Local:.*http://localhost:(\\d+).*",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      },
      "presentation": {
        "hidden": false,
        "group": "TKA",
        "order": 1
      }
    },
    {
      "name": "üîß Debug Existing TKA Server",
      "type": "chrome",
      "request": "launch",
      "url": "${input:serverUrl}",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-fresh",
      "timeout": 3000,
      "disableNetworkCache": true,
      "showAsyncStacks": true,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "runtimeArgs": [
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor",
        "--disable-background-timer-throttling",
        "--disable-backgrounding-occluded-windows",
        "--disable-renderer-backgrounding",
        "--no-first-run",
        "--no-default-browser-check"
      ],
      "presentation": {
        "hidden": false,
        "group": "TKA",
        "order": 2
      }
    }
  ],
  "inputs": [
    {
      "id": "serverUrl",
      "description": "Enter the URL of your running dev server",
      "default": "http://localhost:5173",
      "type": "promptString"
    }
  ]
}
