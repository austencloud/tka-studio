{
  "name": "@tka/web-app",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "TKA Web Application - Browser-based sequence editor",
  "scripts": {
    "dev": "vite dev --host 0.0.0.0",
    "dev:with-index": "npm run generate:index && vite dev --host 0.0.0.0",
    "dev:auto": "node dev-helper.js",
    "build": "npm run generate:index && vite build",
    "generate:index": "node generate-real-index.js",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:debug": "vitest run tests/debug",
    "test:seo": "playwright test tests/e2e/seo-system.spec.ts",
    "test:seo:headed": "playwright test tests/e2e/seo-system.spec.ts --headed",
    "test:seo:debug": "playwright test tests/e2e/seo-system.spec.ts --debug",
    "validate:seo": "node tools/validate-seo.js",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "arch:validate": "node tools/validate-architecture.js",
    "arch:migrate": "node tools/migrate-architecture.js",
    "arch:check": "npm run arch:validate && npm run check",
    "validate:all": "node tools/validate-all.js",
    "validate": "npm run validate:all"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-netlify": "^5.1.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.3",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@types/fabric": "^5.3.10",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^3.2.4",
    "chokidar": "^4.0.3",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.30.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.2",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^3.4.3",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@tauri-apps/plugin-store": "^2.4.0",
    "@xstate/svelte": "^5.0.0",
    "fabric": "^6.7.1",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "inversify": "^7.9.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lucide-svelte": "^0.539.0",
    "lz-string": "^1.5.0",
    "reflect-metadata": "^0.2.2",
    "xstate": "^5.20.2"
  }
}
