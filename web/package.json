{
  "name": "@tka/web-app",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "TKA Web Application - Browser-based sequence editor",
  "scripts": {
    "dev": "npx vite --host 0.0.0.0",
    "build": "npx vite build",
    "preview": "npx vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "format": "prettier --write .",
    "validate": "npm run lint && npm run check && npm run test",
    "validate:all": "node tools/validate-all.js",
    "validate:architecture": "node tools/validate-architecture.js",
    "validate:seo": "node tools/validate-seo.js",
    "test:seo-live": "node tools/test-seo-live.js",
    "clean": "rm -rf build .svelte-kit node_modules/.vite"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@sveltejs/adapter-netlify": "^5.1.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@types/fabric": "^5.3.10",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-svelte": "^2.30.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.2",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^3.4.3",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  },
  "dependencies": {
    "fabric": "^6.7.1",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "inversify": "^7.9.1",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.25.76"
  }
}
