{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tka.dev/schemas/motion-data.json",
  "title": "MotionData v2",
  "description": "Immutable motion data based on modern desktop domain model",
  "type": "object",
  "properties": {
    "motionType": {
      "$ref": "core-enums.json#/definitions/MotionType"
    },
    "propRotDir": {
      "$ref": "core-enums.json#/definitions/RotationDirection"
    },
    "startLoc": {
      "$ref": "core-enums.json#/definitions/Location"
    },
    "endLoc": {
      "$ref": "core-enums.json#/definitions/Location"
    },
    "turns": {
      "type": "number",
      "minimum": 0,
      "description": "Number of turns in the motion"
    },
    "startOri": {
      "$ref": "core-enums.json#/definitions/Orientation",
      "default": "in"
    },
    "endOri": {
      "$ref": "core-enums.json#/definitions/Orientation",
      "default": "in"
    }
  },
  "required": [
    "motionType",
    "propRotDir",
    "startLoc",
    "endLoc",
    "turns",
    "startOri",
    "endOri"
  ],
  "additionalProperties": false
}
