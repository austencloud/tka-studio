<!-- TurnControlPanel.svelte - Responsive turn controls with +/- buttons and center label -->
<script lang="ts">
  import type { BeatData, IDeviceDetector, IHapticFeedbackService } from '$shared';
  import { resolve, TYPES } from '$shared';
  import { onMount } from 'svelte';
  import type { ITurnControlService } from '../services/TurnControlService';

  // Props
  const {
    currentBeatData,
    onTurnAmountChanged,
    onEditTurnsRequested
  } = $props<{
    currentBeatData: BeatData | null;
    onTurnAmountChanged: (color: string, turnAmount: number) => void;
    onEditTurnsRequested: () => void;
  }>();

  // Services
  const turnControlService = resolve(TYPES.ITurnControlService) as ITurnControlService;
  const deviceDetector = resolve(TYPES.IDeviceDetector) as IDeviceDetector;
  let hapticService: IHapticFeedbackService;

  // Reactive device detection
  let containerWidth = $state(0);
  let containerHeight = $state(0);
  let containerRef: HTMLDivElement;

  // Determine layout based on container size and device capabilities
  const shouldUseHorizontalLayout = $derived(() => {
    const capabilities = deviceDetector.getCapabilities();
    const isWideEnough = containerWidth > 400; // Minimum width for horizontal layout
    const isTallEnough = containerHeight > 200; // Minimum height for stacked controls

    // Use horizontal layout when:
    // 1. Container is wide enough AND
    // 2. Either we're on desktop OR in landscape mode with sufficient width
    return isWideEnough && (
      capabilities.screenSize === 'desktop' ||
      capabilities.screenSize === 'largeDesktop' ||
      (capabilities.viewport.width > capabilities.viewport.height && containerWidth > 500)
    );
  });

  onMount(() => {
    hapticService = resolve<IHapticFeedbackService>(TYPES.IHapticFeedbackService);

    // Set up ResizeObserver to track container size
    const resizeObserver = new ResizeObserver((entries) => {
      for (const entry of entries) {
        containerWidth = entry.contentRect.width;
        containerHeight = entry.contentRect.height;
      }
    });

    if (containerRef) {
      resizeObserver.observe(containerRef);
    }

    return () => {
      resizeObserver.disconnect();
    };
  });

  // Handle turn increment/decrement
  function handleTurnDecrement(color: 'blue' | 'red') {
    const currentValue = turnControlService.getCurrentTurnValue(currentBeatData, color);
    const newValue = turnControlService.decrementTurn(currentValue);
    hapticService?.trigger("selection");
    onTurnAmountChanged(color, newValue);
    console.log(`${color} turn decremented to ${newValue}`);
  }

  function handleTurnIncrement(color: 'blue' | 'red') {
    const currentValue = turnControlService.getCurrentTurnValue(currentBeatData, color);
    const newValue = turnControlService.incrementTurn(currentValue);
    hapticService?.trigger("selection");
    onTurnAmountChanged(color, newValue);
    console.log(`${color} turn incremented to ${newValue}`);
  }

  function handleTurnLabelClick(color: 'blue' | 'red') {
    hapticService?.trigger("selection");
    console.log(`${color} turn label clicked - opening modal`);
    onEditTurnsRequested();
  }

  // Helper functions
  function getCurrentTurnValue(color: 'blue' | 'red'): number {
    return turnControlService.getCurrentTurnValue(currentBeatData, color);
  }

  function canDecrementTurn(color: 'blue' | 'red'): boolean {
    const turnValue = getCurrentTurnValue(color);
    return turnControlService.canDecrementTurn(turnValue);
  }

  function canIncrementTurn(color: 'blue' | 'red'): boolean {
    const turnValue = getCurrentTurnValue(color);
    return turnControlService.canIncrementTurn(turnValue);
  }

  function getTurnValue(color: 'blue' | 'red'): string {
    const turnValue = getCurrentTurnValue(color);
    return turnControlService.getTurnValue(turnValue);
  }

  // Get motion type for display
  function getMotionType(color: 'blue' | 'red'): string {
    if (!currentBeatData) return 'Static';
    const motion = color === 'blue' ? currentBeatData.motions?.blue : currentBeatData.motions?.red;
    if (!motion) return 'Static';

    // Capitalize first letter
    const type = motion.motionType || 'static';
    return type.charAt(0).toUpperCase() + type.slice(1);
  }

  // Get rotation direction for display
  function getRotationDirection(color: 'blue' | 'red'): string {
    if (!currentBeatData) return 'NO_ROTATION';
    const motion = color === 'blue' ? currentBeatData.motions?.blue : currentBeatData.motions?.red;
    if (!motion) return 'NO_ROTATION';

    return motion.rotationDirection || 'NO_ROTATION';
  }

  // Check if rotation direction buttons should be shown
  function shouldShowRotationButtons(color: 'blue' | 'red'): boolean {
    const rotDir = getRotationDirection(color);
    return rotDir !== 'NO_ROTATION';
  }

  // Handle rotation direction toggle
  function handleRotationDirectionToggle(color: 'blue' | 'red', direction: string) {
    hapticService?.trigger("selection");
    console.log(`${color} rotation direction toggled to ${direction}`);
    // TODO: Implement rotation direction change handler
    // This will need to be passed up to the parent component
  }
</script>

<div class="turn-controls-section" class:horizontal={shouldUseHorizontalLayout()} bind:this={containerRef}>
  <!-- Blue Turn Control -->
  <div class="turn-control blue-control">
    <div class="control-header">
      <div class="prop-label">Left</div>
      {#if shouldShowRotationButtons('blue')}
        <div class="rotation-buttons">
          <button
            class="rotation-btn"
            class:active={getRotationDirection('blue') === 'COUNTER_CLOCKWISE'}
            onclick={() => handleRotationDirectionToggle('blue', 'COUNTER_CLOCKWISE')}
            aria-label="Counter-clockwise rotation"
            title="Counter-clockwise"
          >
            <i class="fas fa-undo"></i>
          </button>
          <button
            class="rotation-btn"
            class:active={getRotationDirection('blue') === 'CLOCKWISE'}
            onclick={() => handleRotationDirectionToggle('blue', 'CLOCKWISE')}
            aria-label="Clockwise rotation"
            title="Clockwise"
          >
            <i class="fas fa-redo"></i>
          </button>
        </div>
      {/if}
    </div>
    <div class="motion-info">
      <span class="motion-type">{getMotionType('blue')}</span>
    </div>
    <div class="turn-adjuster">
      <button
        class="turn-btn decrement-btn"
        onclick={() => handleTurnDecrement('blue')}
        disabled={!canDecrementTurn('blue')}
        aria-label="Decrease blue turn amount"
      >
        <i class="fas fa-minus"></i>
      </button>
      <button
        class="turn-label-btn"
        onclick={() => handleTurnLabelClick('blue')}
      >
        {getTurnValue('blue')}
      </button>
      <button
        class="turn-btn increment-btn"
        onclick={() => handleTurnIncrement('blue')}
        disabled={!canIncrementTurn('blue')}
        aria-label="Increase blue turn amount"
      >
        <i class="fas fa-plus"></i>
      </button>
    </div>
  </div>

  <!-- Red Turn Control -->
  <div class="turn-control red-control">
    <div class="control-header">
      <div class="prop-label">Right</div>
      {#if shouldShowRotationButtons('red')}
        <div class="rotation-buttons">
          <button
            class="rotation-btn"
            class:active={getRotationDirection('red') === 'COUNTER_CLOCKWISE'}
            onclick={() => handleRotationDirectionToggle('red', 'COUNTER_CLOCKWISE')}
            aria-label="Counter-clockwise rotation"
            title="Counter-clockwise"
          >
            <i class="fas fa-undo"></i>
          </button>
          <button
            class="rotation-btn"
            class:active={getRotationDirection('red') === 'CLOCKWISE'}
            onclick={() => handleRotationDirectionToggle('red', 'CLOCKWISE')}
            aria-label="Clockwise rotation"
            title="Clockwise"
          >
            <i class="fas fa-redo"></i>
          </button>
        </div>
      {/if}
    </div>
    <div class="motion-info">
      <span class="motion-type">{getMotionType('red')}</span>
    </div>
    <div class="turn-adjuster">
      <button
        class="turn-btn decrement-btn"
        onclick={() => handleTurnDecrement('red')}
        disabled={!canDecrementTurn('red')}
        aria-label="Decrease red turn amount"
      >
        <i class="fas fa-minus"></i>
      </button>
      <button
        class="turn-label-btn"
        onclick={() => handleTurnLabelClick('red')}
      >
        {getTurnValue('red')}
      </button>
      <button
        class="turn-btn increment-btn"
        onclick={() => handleTurnIncrement('red')}
        disabled={!canIncrementTurn('red')}
        aria-label="Increase red turn amount"
      >
        <i class="fas fa-plus"></i>
      </button>
    </div>
  </div>
</div>

