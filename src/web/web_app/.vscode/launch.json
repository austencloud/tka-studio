{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Dev Server + Open Browser",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/vite",
			"args": ["--mode", "development"],
			"console": "integratedTerminal",
			"serverReadyAction": {
				"pattern": "Local:.*(http://localhost:5174/)",
				"uriFormat": "%s",
				"action": "openExternally"
			},
			"sourceMaps": true,
			"skipFiles": ["<node_internals>/**"]
		}
	]
}
