{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Main Application",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}"
            },
            "args": [],
            "justMyCode": false,
            "stopOnEntry": false,
            "showReturnValue": true,
            "redirectOutput": true
        },
        {
            "name": "Debug Main Application (Development Mode)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}",
                "TKA_MODE": "development"
            },
            "args": ["--mode", "development"],
            "justMyCode": false,
            "stopOnEntry": false,
            "showReturnValue": true,
            "redirectOutput": true
        },
        {
            "name": "Debug Main Application (Production Mode)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}",
                "TKA_MODE": "production"
            },
            "args": ["--mode", "production"],
            "justMyCode": false,
            "stopOnEntry": false,
            "showReturnValue": true,
            "redirectOutput": true
        },
        {
            "name": "Debug with Custom Args",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}"
            },
            "args": ["--debug", "--verbose"],
            "justMyCode": false,
            "stopOnEntry": false,
            "showReturnValue": true,
            "redirectOutput": true
        }
    ]
}
