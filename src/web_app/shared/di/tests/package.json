{
  "name": "@tka/di-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for TKA Enterprise Dependency Injection System",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:performance": "vitest run --reporter=verbose performance/",
    "test:integration": "vitest run --reporter=verbose integration/",
    "test:core": "vitest run --reporter=verbose core/",
    "test:ci": "vitest run --coverage --reporter=json --reporter=html",
    "test:benchmark": "vitest bench",
    "test:debug": "vitest --inspect-brk",
    "test:memory": "node --expose-gc --max-old-space-size=4096 ./node_modules/.bin/vitest run",
    "test:stress": "vitest run performance/PerformanceStability.test.ts --reporter=verbose",
    "test:compatibility": "vitest run integration/CrossPlatformCompatibility.test.ts --reporter=verbose",
    "test:circular": "vitest run core/CircularDependency.test.ts --reporter=verbose",
    "coverage:open": "open coverage/index.html",
    "coverage:serve": "npx http-server coverage -p 8080",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf coverage test-results node_modules/.cache",
    "validate": "npm run lint && npm run type-check && npm run test:coverage"
  },
  "dependencies": {
    "@tka/di": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "jsdom": "^23.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "dependency-injection",
    "testing",
    "enterprise",
    "typescript",
    "tka"
  ],
  "author": "TKA Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/austencloud/TKA.git",
    "directory": "src/web/shared/di/tests"
  },
  "bugs": {
    "url": "https://github.com/austencloud/TKA/issues"
  },
  "homepage": "https://github.com/austencloud/TKA#readme"
}
