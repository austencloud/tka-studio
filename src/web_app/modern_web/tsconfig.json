{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"moduleResolution": "bundler",
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"declaration": true,
		"declarationMap": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"types": ["svelte"],
		"baseUrl": ".",
		"paths": {
			"$lib": ["./src/lib"],
			"$lib/*": ["./src/lib/*"],
			"$app/*": ["./.svelte-kit/types/app/*"]
		}
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte"
	],
	"exclude": [
		"node_modules/**",
		".svelte-kit/**",
		"dist/**",
		"build/**"
	]
}
