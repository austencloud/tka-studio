{
  "name": "@tka/v2-modern",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "TKA V2 Modern Web Application - Clean Svelte 5 + Runes Architecture",
  "scripts": {
    "dev": "vite dev --host localhost --port 5177",
    "dev:bash": "\"C:\\Program Files\\Git\\bin\\bash.exe\" -c \"npm run dev\"",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:simple": "echo 'Navigate to http://localhost:5177/simple-test to see the pictograph test'",
    "test:integration": "vitest run src/lib/components/workbench/__tests__",
    "test:all": "npm run test:pictograph && npm run test:integration && npm run test:e2e",
    "test:ai-analysis": "tsx scripts/ai-analysis.ts",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "prepare": "svelte-kit sync"
  },
  "dependencies": {
    "@sveltejs/kit": "^2.16.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/ws": "^8.18.1",
    "svelte": "^5.0.0",
    "typescript": "^5.8.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@sveltejs/adapter-auto": "^3.2.5",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.7",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.14",
    "@vitest/ui": "^3.1.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.45.1",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte-check": "^4.1.7",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.0.0",
    "vite": "^6.0.0",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}