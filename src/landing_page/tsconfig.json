{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "bundler",
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "$lib": ["./lib"],
      "$lib/*": ["./lib/*"],
      "$components": ["./lib/components"],
      "$components/*": ["./lib/components/*"],
      "$shared": ["./shared"],
      "$shared/*": ["./shared/*"],
      "$animator": ["./lib/animator"],
      "$animator/*": ["./lib/animator/*"],
      "$routes": ["./routes"],
      "$routes/*": ["./routes/*"],
      "$services": ["./services"],
      "$services/*": ["./services/*"]
    }
  },
  "include": [
    "global.d.ts",
    "./lib/**/*.d.ts",
    "./lib/**/*.ts",
    "./lib/**/*.svelte",
    "./routes/**/*.d.ts",
    "./routes/**/*.ts",
    "./routes/**/*.svelte",
    "./services/**/*.d.ts",
    "./services/**/*.ts",
    "./shared/**/*.d.ts",
    "./shared/**/*.ts",
    "./shared/**/*.svelte",
    "./src/**/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.svelte",
    "./consolidated-app/src/**/*.d.ts",
    "./consolidated-app/src/**/*.ts",
    "./consolidated-app/src/**/*.svelte",
    "./animator/src/**/*.d.ts",
    "./animator/src/**/*.ts",
    "./animator/src/**/*.svelte",
    "./landing/src/**/*.d.ts",
    "./landing/src/**/*.ts",
    "./landing/src/**/*.svelte",
    "./launcher/src/**/*.d.ts",
    "./launcher/src/**/*.ts",
    "./launcher/src/**/*.svelte",
    "./e2e/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "**/dist",
    "build",
    "**/build",
    ".svelte-kit",
    "**/.svelte-kit",
    ".vercel_build_output",
    "**/.vercel_build_output",
    ".vercel",
    "**/.vercel",
    "v1-legacy/**",
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs"
  ]
}
