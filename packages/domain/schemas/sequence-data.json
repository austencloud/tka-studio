{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tka.dev/schemas/sequence-data.json",
  "title": "SequenceData",
  "description": "Pure business data for a complete kinetic sequence. No UI dependencies, completely immutable.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this sequence"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for this sequence"
    },
    "word": {
      "type": "string",
      "description": "Generated word from the sequence letters"
    },
    "beats": {
      "type": "array",
      "items": {
        "$ref": "beat-data.json"
      },
      "description": "Array of beats in this sequence"
    },
    "start_position": {
      "type": ["string", "null"],
      "enum": [
        null, "alpha1", "alpha2", "alpha3", "alpha4", "alpha5", "alpha6", "alpha7", "alpha8",
        "beta1", "beta2", "beta3", "beta4", "beta5", "beta6", "beta7", "beta8",
        "gamma1", "gamma2", "gamma3", "gamma4", "gamma5", "gamma6", "gamma7", "gamma8",
        "gamma9", "gamma10", "gamma11", "gamma12", "gamma13", "gamma14", "gamma15", "gamma16"
      ],
      "description": "Starting position for the entire sequence"
    },
    "length": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of beats in the sequence"
    },
    "total_duration": {
      "type": "number",
      "minimum": 0,
      "description": "Total duration of the sequence in time units"
    },
    "difficulty_level": {
      "type": ["string", "null"],
      "enum": [null, "beginner", "intermediate", "advanced", "expert"],
      "description": "Difficulty classification for this sequence"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "Tags for categorizing or searching sequences"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "When this sequence was created"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "When this sequence was last updated"
    },
    "author": {
      "type": ["string", "null"],
      "description": "Creator of this sequence"
    },
    "description": {
      "type": ["string", "null"],
      "description": "Description or notes about this sequence"
    },
    "is_favorite": {
      "type": "boolean",
      "default": false,
      "description": "Whether this sequence is marked as favorite"
    },
    "is_public": {
      "type": "boolean",
      "default": false,
      "description": "Whether this sequence is publicly shareable"
    },
    "version": {
      "type": "string",
      "default": "1.0.0",
      "description": "Version of this sequence for change tracking"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for this sequence",
      "additionalProperties": true
    }
  },
  "required": [
    "id",
    "name",
    "word",
    "beats"
  ],
  "additionalProperties": false
}
