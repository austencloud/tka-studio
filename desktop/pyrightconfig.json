{
  // Pyright/Pylance Configuration for TKA Desktop
  "include": ["modern/**", "legacy/**", "data/**", "../../src/desktop/**"],
  "exclude": [
    "**/__pycache__",
    "**/.pytest_cache",
    "**/node_modules",
    "**/.git",
    "**/build",
    "**/dist",
    "**/.venv",
    "**/venv"
  ],
  "pythonVersion": "3.13",
  "pythonPlatform": "Windows",
  "typeCheckingMode": "strict",
  "useLibraryCodeForTypes": true,
  "autoSearchPaths": true,
  "autoImportCompletions": true,
  "indexing": true,
  "includeFileSpecs": ["**/*.py", "**/*.pyi"],
  "extraPaths": [
    "./modern/src",
    "./legacy",
    "../..",
    "../../src",
    "../../src/desktop/modern/src",
    "../../src/desktop/legacy/src",
    "../../launcher",
    "../../packages",
    ".",
    "./modern",
    "./legacy",
    "./data",
    "../",
    "./modern/src/application",
    "./modern/src/domain",
    "./modern/src/presentation",
    "./modern/src/infrastructure"
  ],

  // Comprehensive diagnostic settings for cleanup
  "reportMissingImports": "error",
  "reportMissingModuleSource": "warning",
  "reportUnusedImport": "warning",
  "reportUnusedClass": "information",
  "reportUnusedFunction": "information",
  "reportUnusedVariable": "information",
  "reportUnusedCoroutine": "information",
  "reportUnusedExpression": "warning",

  // Type checking suppressions
  "reportGeneralTypeIssues": "information",
  "reportOptionalSubscript": "none",
  "reportOptionalMemberAccess": "none",
  "reportOptionalCall": "none",
  "reportOptionalIterable": "none",
  "reportOptionalContextManager": "none",
  "reportOptionalOperand": "none",
  "reportTypedDictNotRequiredAccess": "none",
  "reportPrivateImportUsage": "none",
  "reportUnknownParameterType": "none",
  "reportUnknownArgumentType": "none",
  "reportUnknownLambdaType": "none",
  "reportUnknownVariableType": "none",
  "reportUnknownMemberType": "none",
  "reportMissingParameterType": "none",
  "reportMissingTypeArgument": "none",
  "reportInvalidTypeVarUse": "none",
  "reportCallInDefaultInitializer": "none",
  "reportUnnecessaryIsInstance": "information",
  "reportUnnecessaryCast": "information",
  "reportUnnecessaryComparison": "information",
  "reportUnnecessaryContains": "information",
  "reportAssertAlwaysTrue": "information",
  "reportSelfClsParameterName": "none",
  "reportImplicitStringConcatenation": "none",

  // Function and method suppressions
  "reportFunctionMemberAccess": "none",
  "reportIncompatibleMethodOverride": "information",
  "reportIncompatibleVariableOverride": "information",
  "reportOverlappingOverload": "information",
  "reportPossiblyUnboundVariable": "information",
  "reportConstantRedefinition": "none",
  "reportInvalidStubStatement": "none",
  "reportIncompleteStub": "none",
  "reportUnsupportedDunderAll": "none",
  "reportUnusedCallResult": "none",

  // PyQt/Qt specific suppressions
  "reportAttributeAccessIssue": "none",
  "reportArgumentType": "information",
  "reportReturnType": "information",
  "reportAssignmentType": "information",
  "reportOperatorIssue": "information",
  "reportIndexIssue": "information",
  "reportInvalidStringEscapeSequence": "information",

  // Code style suppressions (handled by ruff)
  "reportWildcardImportFromLibrary": "none",
  "reportMissingTypeStubs": "none",
  "reportImportCycles": "information",
  "reportPropertyTypeMismatch": "information",
  "reportDuplicateImport": "information",
  "reportUninitializedInstanceVariable": "none",
  "reportCallIssue": "information",
  "reportRedeclaration": "information",

  // Additional PyQt specific suppressions
  "reportIncompatibleCallMethod": "none",
  "reportUntypedFunctionDecorator": "none",
  "reportUntypedClassDecorator": "none",
  "reportUntypedBaseClass": "none",
  "reportUntypedNamedTuple": "none",
  "reportPrivateUsage": "none",
  "reportTypeCommentUsage": "none",
  "reportMatchNotExhaustive": "none",
  "reportShadowedImports": "information"
}
