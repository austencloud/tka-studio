{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "moduleResolution": "bundler",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["reflect-metadata"]
  },
  "include": [
    "global.d.ts",
    "src/**/*.ts",
    "src/**/*.svelte",
    "tests/**/*.ts",
    "src/lib/modules/explore/domain/models/Explore-sorting-models.ts",
    "src/lib/shared/application/state/app-state-factory.svelte.ts",
    "src/lib/shared/application/state/app-state-factory.svelte.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".svelte-kit",
    ".vercel_build_output",
    ".vercel",
    "archive/**/*",
    "legacy_web_app/**/*",
    "**/*.js"
  ]
}
