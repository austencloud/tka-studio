      "args": ["main.py"],
      "options": {
        "cwd": "${workspaceFolder}/launcher"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
