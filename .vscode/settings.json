{
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "python.terminal.activateEnvironment": true,
  "python.defaultInterpreterPath": "./.venv/Scripts/python.exe",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.debugging.noDebugAdapterPath": false,
  "python.experiments.enabled": false,
  "python.envFile": "${workspaceFolder}/.env",
  "python.pythonPath": "./.venv/Scripts/python.exe",
  "debug.terminal.clearBeforeReusing": true,
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.largeFileOptimizations": true,

  // === RUFF CONFIGURATION - AUTO FORMATTING ENABLED ===
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit"
      // "source.organizeImports.ruff": "explicit"  // TEMPORARILY DISABLED TO PREVENT AUTO-IMPORT REMOVAL
    }
  },

  // === RUFF EXTENSION SETTINGS ===
  "ruff.enable": true,
  "ruff.organizeImports": false,  // TEMPORARILY DISABLED TO PREVENT AUTO-IMPORT REMOVAL
  "ruff.fixAll": true,

  // === DISABLE OLD TOOLS TO AVOID CONFLICTS ===
  "python.linting.enabled": false,
  "python.linting.pylintEnabled": false,
  "python.formatting.provider": "none",
  "python.formatting.blackEnabled": false,
  "isort.check": false,

  // === PYTHON LANGUAGE SERVER - FIXED FOR CONSISTENT HIGHLIGHTING ===
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoSearchPaths": true,
  "python.analysis.memory.keepLibraryAst": false,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.indexing": true,
  "python.analysis.diagnosticMode": "workspace",

  // === EDITOR FEATURES - ALL ENABLED FOR PROPER CODING ===
  "editor.semanticHighlighting.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": true,
  "editor.codeLens": true,
  "editor.parameterHints.enabled": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  // === INTELLISENSE - ALL ESSENTIAL FEATURES ENABLED ===
  "editor.suggest.showMethods": true,
  "editor.suggest.showFunctions": true,
  "editor.suggest.showConstructors": true,
  "editor.suggest.showFields": true,
  "editor.suggest.showVariables": true,
  "editor.suggest.showClasses": true,
  "editor.suggest.showStructs": true,
  "editor.suggest.showInterfaces": true,
  "editor.suggest.showModules": true,
  "editor.suggest.showProperties": true,
  "editor.suggest.showEvents": true,
  "editor.suggest.showOperators": true,
  "editor.suggest.showValues": true,
  "editor.suggest.showConstants": true,
  "editor.suggest.showEnums": true,
  "editor.suggest.showEnumMembers": true,
  "editor.suggest.showKeywords": true,
  "editor.suggest.showSnippets": true,
  "editor.suggest.showReferences": true,
  "editor.suggest.showTypeParameters": true,

  // === WEB/JS FORMATTERS ===
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // === MEMORY-SAVING FILE EXCLUSIONS ===
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/image_cache/**": true,
    "**/exports/**": true,
    "**/.benchmarks/**": true,
    "**/function_removal_backups/**": true,
    "**/test_reports/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/env/**": true,
    "**/*.log": true,
    "**/*.tmp": true,
    "**/*.backup": true,
    "**/.hypothesis/**": true
  },

  // === FILE WATCHER EXCLUSIONS ===
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/.venv/**": true,
    "**/env/**": true,
    "**/venv/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/images/**": true,
    "**/image_cache/**": true,
    "**/exports/**": true,
    "**/.benchmarks/**": true,
    "**/test_reports/**": true,
    "**/function_removal_backups/**": true,
    "**/.hypothesis/**": true,
    "**/*.backup": true,
    "**/*.log": true,
    "**/*.tmp": true
  },

  // === SEARCH EXCLUSIONS ===
  "search.exclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/env/**": true,
    "**/.git/**": true,
    "**/images/**": true,
    "**/image_cache/**": true,
    "**/exports/**": true,
    "**/.benchmarks/**": true,
    "**/function_removal_backups/**": true,
    "**/test_reports/**": true,
    "**/.hypothesis/**": true,
    "**/*.backup": true,
    "**/*.log": true,
    "**/*.json.backup": true
  },

  // === HIGH MEMORY SYSTEM CONFIGURATION ===
  "files.maxMemoryForLargeFilesMB": 65536,
  "typescript.tsserver.maxTsServerMemory": 16384,
  "python.analysis.memory.keepLibraryLocalVariables": false,

  // === GIT PERFORMANCE ===
  "git.autoRepositoryDetection": true,
  "git.autofetch": false,
  "git.enableStatusBarSync": false,
  "git.decorations.enabled": true,

  // === TESTING CONFIGURATION ===
  "python.testing.pytestArgs": [".", "-v", "--tb=short"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.cwd": "${workspaceFolder}",
  "python.testing.autoTestDiscoverOnSaveEnabled": false,
  "python.testing.pytestPath": "./.venv/Scripts/pytest.exe",

  // === TYPESCRIPT PERFORMANCE ===
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": true,

  // === MINIMAL BACKGROUND OPTIMIZATIONS ===
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "telemetry.telemetryLevel": "off",

  // === SPELL CHECK ===
  "cSpell.enabled": false,
  "cSpell.ignorePaths": [
    "**/node_modules/**",
    "**/.git/**",
    "**/.venv/**",
    "**/__pycache__/**",
    "**/dist/**",
    "**/build/**",
    "**/*.png",
    "**/*.jpg",
    "**/*.dll",
    "**/*.pyd",
    "**/*.pyc"
  ]
}
